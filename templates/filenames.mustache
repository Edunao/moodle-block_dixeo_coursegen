{{!
    @template block_dixeo_coursegen/filenames

    Filenames template for displaying uploaded files and their total size

    Example context (json):
    {
        "hasFiles": true,
        "files": [
            {
                "name": "file1.txt",
                "size": "2MB"
            },
            {
                "name": "file2.jpg",
                "size": "1.5MB"
            }
        ],
        "totalSize": "3.5MB",
        "maxTotalSize": "10MB"
    }
}}
{{#hasFiles}}
    {{#files}}
        <div class="file-item">
            <span class="mr-1 delete-icon" data-toggle="tooltip" title="{{#str}} removefile, block_dixeo_coursegen {{/str}}"><i class="fa fa-remove"></i></span> {{ name }} ({{ size }})
        </div>
    {{/files}}
    <p class="total-size mb-2">{{#str}} totalsize, block_dixeo_coursegen, {{ totalSize }}{{/str}} / {{ maxTotalSize }}</p>
{{/hasFiles}}
