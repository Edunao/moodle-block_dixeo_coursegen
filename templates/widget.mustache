<div id="generation-widget" class="position-fixed">
    <button id="generate_course" class="btn btn-secondary btn-circle" disabled title="{{#str}} generating_course, block_course_generator {{/str}}">
        <span class="mr-1 delete-icon" data-toggle="tooltip" title="{{#str}} dismiss, block_course_generator {{/str}}"><i class="fa fa-remove"></i></span>
        <div id="progress-spinner" role="status" class="spinner-border position-absolute"></div>
        <img src="{{ logourl }}" alt="Logo" width="32px" height="32px" class="mr-2">
        <span class="inprogress d-none d-md-inline-block">{{#str}} inprogress, block_course_generator {{/str}}</span>
    </button>
</div>

{{#js}}
    require(['jquery'], function($) {
        $(document).ready(function() {
            let widget = $('#generation-widget');
            let removeIcon = widget.find('.delete-icon');
            removeIcon.click(function() {
                widget.hide();
            });
        });
    });
{{/js}}
